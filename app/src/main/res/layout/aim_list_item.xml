<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="150dp">

    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateTxt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toTopOf="@+id/walkTxt"/>
    <TextView
            android:text="steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stepsTxt"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/runTxt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/walkTxt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="aerobic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aerobicTxt"
            app:layout_constraintStart_toEndOf="@+id/walkTxt" android:layout_marginStart="88dp"
            app:layout_constraintHorizontal_bias="0.202" app:layout_constraintEnd_toStartOf="@+id/runTxt"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="run "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/runTxt"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>